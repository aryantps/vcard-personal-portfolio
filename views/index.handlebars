<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{data.name}}</title>
    <!--
    - favicon
  -->
    <link rel="shortcut icon" href={{data.logoURL}} type="image/x-icon">
    <!--
    - custom css link
  -->
    <link rel="stylesheet" href="/css/style.css">
    <!--
    - google font link
  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <!--
    - #MAIN
  -->
    <main>
      <!--
      - #SIDEBAR
    -->
      <aside class="sidebar" data-sidebar>
        <div class="sidebar-info">
          <figure class="avatar-box">
            <img src={{data.avatarURL}} alt={{data.name}} width="80">
          </figure>
          <div class="info-content">
            <h1 class="name" title={{data.name}}>{{data.name}}</h1>
            <p class="title">{{data.title}}</p>
          </div>
          <button class="info_more-btn" data-sidebar-btn>
            <span>Show Contacts</span>
            <ion-icon name="chevron-down"></ion-icon>
          </button>
        </div>
        <div class="sidebar-info_more">
          <div class="separator"></div>
          <ul class="contacts-list">
            <li class="contact-item">
              <div class="icon-box">
                <ion-icon name="mail-outline"></ion-icon>
              </div>
              <div class="contact-info">
                <p class="contact-title">Email</p>
                <a href="mailto:{{data.email}}" class="contact-link">{{data.email}}</a>
              </div>
            </li>
            <li class="contact-item">
              <div class="icon-box">
                <ion-icon name="phone-portrait-outline"></ion-icon>
              </div>
              <div class="contact-info">
                <p class="contact-title">Phone</p>
                <a href="tel:{{data.phone}}" class="contact-link">{{data.phone}}</a>
              </div>
            </li>
            <li class="contact-item">
              <div class="icon-box">
                <ion-icon name="calendar-outline"></ion-icon>
              </div>
              <div class="contact-info">
                <p class="contact-title">Birthday</p>
                <time datetime={{data.birthday}}>{{data.birthday}}</time>
              </div>
            </li>
            <li class="contact-item">
              <div class="icon-box">
                <ion-icon name="location-outline"></ion-icon>
              </div>
              <div class="contact-info">
                <p class="contact-title">Location</p>
                <address>{{data.address}}</address>
              </div>
            </li>
          </ul>
          <div class="separator"></div>
          <ul class="social-list">
            <li class="social-item">
              <a href={{data.facebookURL}} class="social-link">
                <ion-icon name="logo-facebook"></ion-icon>
              </a>
            </li>
            <li class="social-item">
              <a href={{data.twitterURL}} class="social-link">
                <ion-icon name="logo-twitter"></ion-icon>
              </a>
            </li>
            <li class="social-item">
              <a href={{data.instagramURL}} class="social-link">
                <ion-icon name="logo-instagram"></ion-icon>
              </a>
            </li>
          </ul>
        </div>
      </aside>
      <!--
      - #main-content
    -->
      <div class="main-content">
        <!--
        - #NAVBAR
      -->
        <nav class="navbar">
          <ul class="navbar-list">
            {{#each data.navLinks}}
              <li class="navbar-item">
                <button class="navbar-link {{#if activeLink}}active{{/if}}" data-nav-link>{{this}}</button>
              </li>
            {{/each}}
          </ul>
        </nav>

        <!--
        - #ABOUT
      -->
        <article class="about  active" data-page="about">
          <header>
            <h2 class="h2 article-title">About me</h2>
          </header>
          <section class="about-text">
            <p>{{data.aboutMePart1}}</p>
            <p>{{data.aboutMePart2}}</p>
          </section>
          <!--
          - service
        -->
          <section class="service">
            <h3 class="h3 service-title">What I'm Doing</h3>
            <ul class="service-list">
              {{#each data.services}}
                <li class="service-item">
                  <div class="service-icon-box">
                    <img src="{{this.icon}}" alt="{{this.title}} icon" width="40">
                  </div>
                  <div class="service-content-box">
                    <h4 class="h4 service-item-title">{{this.title}}</h4>
                    <p class="service-item-text">
                      {{this.description}}
                    </p>
                  </div>
                </li>
              {{/each}}
            </ul>
          </section>
          <!--
          - testimonials
        -->
          <section class="testimonials">
            <h3 class="h3 testimonials-title">"Testimonials"</h3>
            <ul class="testimonials-list has-scrollbar">
              {{#each data.testimonials}}
                <li class="testimonials-item">
                  <div class="content-card" data-testimonials-item>
                    <figure class="testimonials-avatar-box">
                      <img src="{{avatar}}" alt="{{name}}" width="60" data-testimonials-avatar>
                    </figure>
                    <h4 class="h4 testimonials-item-title" data-testimonials-title>{{this.name}}</h4>
                    <div class="testimonials-text" data-testimonials-text>
                      <p>{{this.quote}}</p>
                    </div>
                  </div>
                </li>
              {{/each}}
            </ul>
          </section>
          <!--
          - testimonials modal
        -->
          <div class="modal-container" data-modal-container>
            <div class="overlay" data-overlay></div>
            <section class="testimonials-modal">
              <button class="modal-close-btn" data-modal-close-btn>
                <ion-icon name="close-outline"></ion-icon>
              </button>
              <div class="modal-img-wrapper">
                <figure class="modal-avatar-box">
                  <img src="{{avatar}}" alt="{{name}}" width="80" data-modal-img>
                </figure>
                <img src="/images/icon-quote.svg" alt="quote icon">
              </div>
              <div class="modal-content">
                <h4 class="h3 modal-title" data-modal-title>{{name}}</h4>
                <time datetime="{{date}}">{{formattedDate}}</time>
                <div data-modal-text>
                  <p>{{quote}}</p>
                </div>
              </div>
            </section>
          </div>
          <!--
          - clients
        -->
          <section class="clients">
            <h3 class="h3 clients-title">{{data.clients.title}}</h3>
            <ul class="clients-list has-scrollbar">
              {{#each data.clients.logos}}
                <li class="clients-item">
                  <a href="{{this.link}}">
                    <img src="{{this.imageSrc}}" alt="{{this.alt}}">
                  </a>
                </li>
              {{/each}}
            </ul>
          </section>
        </article>
        <!--
        - #RESUME
      -->
        <article class="resume" data-page="resume">
          <header>
            <h2 class="h2 article-title">Resume</h2>
          </header>
          <section class="timeline">
            <div class="title-wrapper">
              <div class="icon-box">
                <ion-icon name="{{data.education.icon}}"></ion-icon>
              </div>
              <h3 class="h3">{{data.education.title}}</h3>
            </div>
            <ol class="timeline-list">
              {{#each data.education.items}}
                <li class="timeline-item">
                  <h4 class="h4 timeline-item-title">{{this.title}}</h4>
                  <span>{{this.duration}}</span>
                  <p class="timeline-text">{{this.description}}</p>
                </li>
              {{/each}}
            </ol>
          </section>
          <section class="timeline">
            <div class="title-wrapper">
              <div class="icon-box">
                <ion-icon name="{{data.experience.icon}}"></ion-icon>
              </div>
              <h3 class="h3">{{data.experience.title}}</h3>
            </div>
            <ol class="timeline-list">
              {{#each data.experience.experience}}
                <li class="timeline-item">
                  <h4 class="h4 timeline-item-title">{{this.title}}</h4>
                  <span>{{this.years}}</span>
                  <p class="timeline-text">{{this.description}}</p>
                </li>
              {{/each}}
            </ol>
          </section>
          <section class="skill">
            <h3 class="h3 skills-title">{{data.skillset.skillsTitle}}</h3>
            <ul class="skills-list content-card">
              {{#each data.skillset.skills}}
                <li class="skills-item">
                  <div class="title-wrapper">
                    <h5 class="h5">{{this.title}}</h5>
                    <data value="{{this.value}}">{{this.value}}%</data>
                  </div>
                  <div class="skill-progress-bg">
                    <div class="skill-progress-fill" style="width: {{this.value}}%;"></div>
                  </div>
                </li>
              {{/each}}
            </ul>
          </section>
        </article>
        <!--
        - #PORTFOLIO
      -->
        <article class="portfolio" data-page="portfolio">
          <header>
            <h2 class="h2 article-title">Portfolio</h2>
          </header>
          <section class="projects">
            <ul class="filter-list">
              {{#each data.projects.filters}}
                <li class="filter-item">
                  <button class="{{#if active}}active{{/if}}" data-filter-btn="{{filter}}">{{label}}</button>
                </li>
              {{/each}}
            </ul>
            <div class="filter-select-box">
              <button class="filter-select" data-select>
                <div class="select-value" data-selecct-value>{{data.projects.selectedCategory}}</div>
                <div class="select-icon">
                  <ion-icon name="chevron-down"></ion-icon>
                </div>
              </button>
              <ul class="select-list">
                <li class="select-item">
                  <button data-select-item>All</button>
                </li>
                {{#each data.projects.categories}}
                  <li class="select-item">
                    <button data-select-item="{{this}}">{{this}}</button>
                  </li>
                {{/each}}
              </ul>
            </div>
            <ul class="project-list">
              {{#each data.projects.projects}}
                <li class="project-item {{#if active}}active{{/if}}" data-filter-item data-category="{{category}}">
                  <a href="#">
                    <figure class="project-img">
                      <div class="project-item-icon-box">
                        <ion-icon name="eye-outline"></ion-icon>
                      </div>
                      <img src="{{image}}" alt="{{title}}" loading="lazy">
                    </figure>
                    <h3 class="project-title">{{title}}</h3>
                    <p class="project-category">{{category}}</p>
                  </a>
                </li>
              {{/each}}
            </ul>
          </section>
        </article>
        <!--
        - #BLOG
      -->
        <article class="blog" data-page="blog">
          <header>
            <h2 class="h2 article-title">Blog</h2>
          </header>
          <section class="blog-posts">
            <ul class="blog-posts-list">
              {{#each data.blogPosts}}
                <li class="blog-post-item">
                  <a href="{{url}}">
                    <figure class="blog-banner-box">
                      <img src="{{imageUrl}}" alt="{{imageAltText}}" loading="lazy">
                    </figure>
                    <div class="blog-content">
                      <div class="blog-meta">
                        <p class="blog-category">{{category}}</p>
                        <span class="dot"></span>
                        <time datetime="{{date}}">{{formattedDate}}</time>
                      </div>
                      <h3 class="h3 blog-item-title">{{title}}</h3>
                      <p class="blog-text">{{excerpt}}</p>
                    </div>
                  </a>
                </li>
              {{/each}}
            </ul>
          </section>
        </article>
        <!--
        - #CONTACT
      -->
        <article class="contact" data-page="contact">
          <header>
            <h2 class="h2 article-title">{{data.contact.title}}</h2>
          </header>
          <section class="mapbox" data-mapbox>
            <figure>
              <iframe src="{{data.contact.mapURL}}" width="400" height="300" loading="lazy"></iframe>
            </figure>
          </section>
          <section class="contact-form">
            <h3 class="h3 form-title">{{data.contact.formTitle}}</h3>
            <form action="/submit-form" method="POST" class="form" data-form>
              <div class="input-wrapper">
                <input type="text" name="fullname" class="form-input" placeholder="{{data.contact.fullNamePlaceholder}}" required data-form-input>
                <input type="email" name="email" class="form-input" placeholder="{{data.contact.emailPlaceholder}}" required data-form-input>
              </div>
              <textarea name="message" class="form-input" placeholder="{{data.contact.messagePlaceholder}}" required data-form-input></textarea>
              <button class="form-btn" type="submit" disabled data-form-btn value="{{data.contact.buttonText}}>
																										<ion-icon name=" paper-plane"></ion-icon>
                <span>{{data.contact.buttonText}}</span>
              </button>
            </form>
          </section>
        </article>
      </div>
    </main>
    <!--
    - custom js link
  -->
    <script src="/js/script.js"></script>
    <!--
    - ionicon link
  -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  </body>
</html>